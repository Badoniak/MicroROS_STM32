/**
  * @brief  Function implementing the defaultTask thread.
  * @param  argument: Not used
  * @retval None
  */
/* USER CODE END Header_StartDefaultTask */
void StartDefaultTask(void *argument)
{
	//NVIC_SystemReset();

	    create_entities();
	    HAL_Init();
	    SystemClock_Config();
	    Init_joint_state_msg();
	    MX_GPIO_Init();
	    MX_TIM2_Init();
	    MX_TIM1_Init();
	    MX_TIM3_Init();
	    MX_TIM5_Init();
	    MX_TIM8_Init();
	    setupPins();
	    state =WAITING_AGENT;


	   // if (!is_connected) {
	   	 //       uint32_t current_time = HAL_GetTick();
	   	//	   uint32_t time_since_last = (last_connected_time == 0) ? current_time : (current_time - last_connected_time);
	   	//	   if (time_since_last >= 500) {
	   	//		   cleanup();
	   	//		   NVIC_SystemReset(); // Resetuj MCU po 3 sekundach bez połączenia
	   	//	   }

	   	  // }

/*
	    while (1) {
	        RCSOFTCHECK(rclc_executor_spin_some(&executor, RCL_MS_TO_NS(FRAME_TIME)));
	        update_encoders();
	        HAL_Delay(FRAME_TIME);
	    }

	    cleanup();
*/
	    while (1) {
	    	switch(state) {
	    	 case WAITING_AGENT:
	    		 	 	 	 create_entities();
	    		 	 	 	 HAL_Delay(500);
	    	                if (rmw_uros_ping_agent(100, 3) == RMW_RET_OK) {
	    	                    state = AGENT_AVAILABLE;
	    	                }
	    	                HAL_Delay(300);  // Zmniejsz częstotliwość sprawdzania
	    	                break;

	    	            case AGENT_AVAILABLE:
	    	                if (create_entities()) {
	    	                    state = AGENT_CONNECTED;
	    	                } else {
	    	                    cleanup();
	    	                    state = WAITING_AGENT;
	    	                }
	    	                break;

	    	            case AGENT_CONNECTED:
	    	                if (rmw_uros_ping_agent(100, 3) != RMW_RET_OK) {
	    	                    state = AGENT_DISCONNECTED;
	    	                } else {
	    	                    RCSOFTCHECK(rclc_executor_spin_some(&executor, RCL_MS_TO_NS(FRAME_TIME)));
	    	                    update_encoders();
	    	                }
	    	                HAL_Delay(FRAME_TIME);
	    	                break;

	    	            case AGENT_DISCONNECTED:
	    	                cleanup();
	    	                state = WAITING_AGENT;
	    	                break;
	    	}

	    }
	           /*rmw_ret_t ret = rmw_uros_ping_agent(100, 10);
	           if (ret == RMW_RET_OK) {
	               is_connected = true;
	               last_connected_time = HAL_GetTick();
	           } else {
	               is_connected = false;
	           }

	           if (is_connected) {
	               // Kontynuuj normalne operacje
	               RCSOFTCHECK(rclc_executor_spin_some(&executor, RCL_MS_TO_NS(FRAME_TIME)));
	               update_encoders();
	               HAL_Delay(FRAME_TIME);
	           } else {
